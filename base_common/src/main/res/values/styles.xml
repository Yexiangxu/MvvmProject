<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:screenOrientation">portrait</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/statusbarColor</item>        <!--状态栏底色(电池栏)-->
        <item name="colorPrimary">@color/statusbarColor</item>        <!--工具栏(标题栏)颜色-->
        <item name="android:textColorPrimary">@color/white</item> <!--返回键处文字颜色-->
        <item name="android:includeFontPadding">false</item>
        <item name="android:windowBackground">@color/bg_maincolor</item> <!--背景色-->
        <item name="android:textAllCaps">false</item>
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
        <item name="colorControlHighlight">@color/theme_colorControlHighlight
        </item><!--所有可点击Views触摸状态下的 Ripple（涟漪）效果。仅作用于 Lollipop 及更高版本-->
        <item name="android:textColor">@color/black_ff333333</item>

        <item name="editTextColor">@android:color/black</item><!--EditText 输入框中字体的颜色-->
        <item name="android:textColorHint">@color/gray_bbbbbb</item>
        <item name="android:divider">@android:color/darker_gray</item> <!--分割线颜色-->
        <item name="colorAccent">@color/theme_colorControlHighlight
        </item>        <!--输入框 checkbox等获取焦点状态下颜色-->
        <item name="colorControlNormal">@color/theme_colorControlNormal
        </item><!--CheckBox，RadioButton等默认状态颜色-->

    </style>

    <!-- 默认动画 -->
    <style name="AnimationActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_open_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/a_to_b_of_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/a_back_b_of_in</item>
        <item name="android:activityCloseExitAnimation">@anim/a_back_b_of_out</item>
    </style>
    <!--全屏-->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="App_Theme_Loading">
        <item name="minWidth">48dp</item>
        <item name="maxWidth">48dp</item>
        <item name="minHeight">48dp</item>
        <item name="maxHeight">48dp</item>
        <item name="indicatorName">LoadingIndicator</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="actionMenuTextColor">@color/default_title</item> <!--  menu颜色-->
        <item name="android:textSize">@dimen/titlesize</item> <!--  menu字体大小-->
        <item name="android:textColor">@color/black_ff030303</item> <!--  menu字体大小-->
    </style>

    <style name="TvCenterStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingTop">@dimen/dp10</item>
        <item name="android:paddingBottom">@dimen/dp10</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="IvNavMain">
        <item name="android:layout_width">@dimen/dp20</item>
        <item name="android:layout_height">@dimen/dp20</item>
    </style>

    <style name="TvNavMain">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/nav_left_margin</item>
        <item name="android:textSize">@dimen/sp15</item>
        <item name="android:textColor">@color/black_ff333333</item>
    </style>

    <style name="llNavMain">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp48</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">@dimen/nav_left_margin</item>
    </style>

    <style name="ToolbarStyle"  parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp18</item>
    </style>
    <!--titlebar 标题-->
    <style name="ToolBar.Title" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <!--登陆注册 大标题 公共样式-->
    <style name="LoginTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp24</item>
        <item name="android:textColor">@color/color_3d3d3b</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <!--登陆注册 小字 公共样式-->
    <style name="LoginMsg">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp12</item>
        <item name="android:textColor">@color/gray_ff4c5770</item>
        <item name="android:gravity">center</item>
    </style>

    <!--Button 公共样式-->
    <style name="BtnMain" parent="@style/Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp46</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp14</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_main</item>
        <item name="android:layout_marginStart">@dimen/dp26</item>
        <item name="android:layout_marginEnd">@dimen/dp26</item>
    </style>

    <style name="LoginEtHint">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp13</item>
        <item name="android:textColorHint">@color/gray_a1a9b0</item>
        <item name="android:textColor">@color/gray_ff4c5770</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/white</item>
    </style>

    <dimen name="sp12">12sp</dimen>
    <dimen name="dp120">120dp</dimen>
    <dimen name="dp40">40dp</dimen>
    <dimen name="sp14">14sp</dimen>
    <dimen name="sp13">13sp</dimen>
    <color name="gray_ff4c5770">#ff4c5770</color>
    <color name="gray_a1a9b0">#a1a9b0</color>
    <color name="black_ff030303">#ff030303</color>
</resources>
